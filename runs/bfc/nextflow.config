process.container = 'rcents/im:bfc'

docker {
    runOptions = '-v ~/work/rcents/ec/runs/bfc:/work/bfc:ro -v ~/work/data:/data:rw -v ~/work/data/:/ncbi/public/:rw'
    enabled = true
    temp = 'auto'
}

timeline {
    enabled = true
    file = 'bfc_time.html'
}

report {
    enabled = true
    file = 'bfc_report.html'
}

